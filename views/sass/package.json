{
	"scripts": {
		"install-sass": "npm install -g sass",
		"nodejs-sass-accounts": "sass --watch --no-source-map marbust-accounts.scss ../../public/css/styles.css --style compressed",
		"nodejs-sass-default": "sass --watch --no-source-map default.scss ../../public/css/styles.css --style compressed",
		"html-sass-default": "sass --watch --no-source-map default.scss ../css/styles.css --style compressed",
		"php-sass-default": "sass --watch --no-source-map default.scss ../../css/styles.css --style compressed",
		"submodule-nodejs": "git submodule add https://github.com/MarAntBQ/MarbustFrameworkCSS.git ./views/sass",
		"submodule-html": "git submodule add https://github.com/MarAntBQ/MarbustFrameworkCSS.git ./sass"
	}
}