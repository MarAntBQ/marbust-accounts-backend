  <div class="<%= moduleSection %>__form">
    <div class="wrapper">
      <h1>User Details</h1>
      <form action="/admin/user-details" method="POST">
        <p><input type="text" name="first_name" placeholder="Insert your name" value="<%= usr.first_name %>"<% if(!editing) {%>disabled<% }%>></p>
        <p><input type="text" name="last_name" placeholder="Insert your name" value="<%= usr.last_name %>"<% if(!editing) {%>disabled<% }%>></p>
        <p><input type="text" name="email" placeholder="Insert your email"  value="<%= usr.email %>"></p>
        <p><input type="tel" name="phone" placeholder="Insert your phone number"  value="<%= usr.phone %>"></p>
        <button type="submit" class="btn">Change Data</button>
        <input name="form_action" value="edit" hidden>
        <input name="id" value="<%= usr.id %>" hidden>
      </form>
      <form action="/admin/user-details" method="POST" class="button-form">
        <button type="submit" class="btn btn--alert">Delete Account <i class="fas fa-user-times"></i></button>
        <input name="form_action" value="delete" hidden>
        <input name="id" value="<%= usr.id %>" hidden>
      </form>
    </div>
  </div>